{
  "manifest_version": 3,
  "name": "The Open Tech Company - Block Focus",
  "version": "2.0.0",
  "description": "Blocks focus event listeners and page visibility on all websites",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/settings-bridge.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://*/*"],
      "js": ["src/content.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": true
    },
    {
      "matches": ["*://*/*"],
      "js": ["src/copy-helper.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "host_permissions": ["*://*/*"],
  "permissions": ["storage", "tabs"],
  "options_page": "public/options.html",
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "assets/icon.svg",
      "32": "assets/icon.svg",
      "48": "assets/icon.svg",
      "128": "assets/icon.svg"
    }
  },
  "icons": {
    "16": "assets/icon.svg",
    "32": "assets/icon.svg",
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  }
}
